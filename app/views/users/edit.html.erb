<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User info</h2>
<% if @user.errors.any? %>
 <%= @user.errors.count %>errors prohibited this book from being saved:
 <ul>
  <% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
 </ul>
<% end %>
<%= form_with model: @user, local:true do |f| %>
<div class= "form-group">
 <label for="inputName">Name</label><br>
 <%= f.text_field :name, autofocus: true, id:"inputName" %><br>
 </div>
 <div class= "form-group">
 <label for="inputImage">Image</label><br>
 <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %><br>
 </div>
 <div class= "form-group">
 <label for="inputIntroduction">Introduction</label><br>
 <%= f.text_area :introduction %>
 </div>
 <div class= "form-group">
  <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">

 </div>
<% end %>
