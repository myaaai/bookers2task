


<h2>User info</h2>

<div class="profile-container">
 <%= image_tag user.get_profile_image("70x70") %>
</div>

 <table class="table table-hover table-inverse">
 <tbody>
  <tr>
  <th>name</th><th><div class="profile-name"><%= user.name %></div></th>
  </tr>
  <tr>
  <th>introduction</th><th><div class="introduction"><%= user.introduction %></div></th>
  </tr>
</tbody>
</table>
<div class="row">
<%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
<i class="fas fa-user-cog"></i>
<% end %>
</div>


<h2 class="mt-3">New book</h2>
 <% if book.errors.any? %>
 <%= book.errors.count %>errors prohibited this book from being saved:
 <ul>
  <% book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<%= form_with model:book, url: '/books', method: :post, local: true do |f| %>
<div class= "form-group">
 <label for="book_title">Title</label><br>
 <%= f.text_field :title %><br>
 </div>

 <div class= "form-group">
 <label for="book_opinion">Opinion</label><br>
 <%= f.text_area :body %><br>
 </div>

<input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">

<% end %>
